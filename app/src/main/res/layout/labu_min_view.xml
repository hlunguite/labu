<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/labu_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="0dp"


        card_view:cardCornerRadius="@dimen/card_labu_radius">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/labuicon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/labu_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="fitXY"  />

            <TextView
                android:id="@+id/labumin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labuicon"
                android:paddingLeft="@dimen/labu_title_padding"
                android:paddingRight="@dimen/labu_title_padding"
                android:paddingTop="@dimen/labu_title_padding"
                android:gravity="center"
                android:textColor="@color/labu_title"
                android:textSize="@dimen/labu_title"

                />

            <TextView
                android:id="@+id/labudesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labumin"
                android:gravity="center"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/labu_title_padding"
                android:paddingRight="@dimen/labu_title_padding"
                android:textSize="@dimen/songs_count"

               />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>